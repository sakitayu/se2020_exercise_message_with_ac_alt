<h2>ユーザー</h2>
<p><%= current_user.name %>としてログインしてます</p>
<% @users.each do |user| %>
  <% if user.id != current_user.id %>
    <li>
      <div class="item">
        <%= link_to user.name, user %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
      </div>
    </li>
    <li><%= render 'follow_form', user: user %></li> <!-- フォロー機能が実装されて入ればこの一文も必要 -->
  <% end %>
<% end %>

<div>ここに表示されるはず↓</div>
<div id="notification_id_is<%= current_user.id %>"></div>